<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/profile_picture1"
        android:layout_height="200dp"
        android:layout_width="200dp"
        android:layout_centerHorizontal="true"
        android:background="@color/colorPrimaryDark"
        android:src="@drawable/profilepic"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/profile_picture1"
        android:layout_centerHorizontal="true"
        android:text="@string/profile_picture1"/>

    <ImageView
        android:id="@+id/profile_picture2"
        android:layout_height="200dp"
        android:layout_width="200dp"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:background="@color/colorPrimaryDark"
        android:layout_below="@id/profile_picture1"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/profile_picture2"
        android:layout_centerHorizontal="true"
        android:text="@string/profile_picture2"/>

    <ImageView
        android:id="@+id/profile_picture3"
        android:layout_height="200dp"
        android:layout_width="200dp"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:background="@color/colorPrimaryDark"
        android:layout_below="@id/profile_picture2"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/profile_picture3"
        android:layout_centerHorizontal="true"
        android:text="@string/profile_picture3"/>

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/name"
        android:layout_margin="10dp"
        android:textSize="20sp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"/>


</RelativeLayout>